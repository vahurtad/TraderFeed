{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6", "es2016", "es2016.array.include", "dom", "es2017.object"],
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strictNullChecks": false,
    "experimentalDecorators": true,
    "outDir": "build",
    "sourceMap": true,
    "allowJs": true,
   // "declaration": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
    // "types/*.d.ts",
    // "src/**/*.ts",
    // "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}
